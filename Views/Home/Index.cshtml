@model ProyectoCadeteria.ViewModels.IndexCadeteriaVM
@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class=display-4">@Model.Nombre</h1>
    <p>Telefono: @Model.Telefono</a></p>
</div>
 <div class="row g-4 w-100" style="max-width: 900px;">

                <!-- Tarjeta de Gestión de Productos -->
                <div class="col-md-6">
                    <div class="card shadow-lg border-0 h-100">
                        <div class="card-body p-4 text-center">
                            <i class="bi bi-box-seam display-4 text-warning mb-3"></i>
                            <h2 class="h3 card-title fw-bold">Gestión de Cadetes</h2>
                            <p class="card-text text-muted">Visualice la plantilla de cadetes.</p>
                            <a asp-controller="Cadetes" asp-action="Index" class="btn btn-warning mt-3 w-100">
                                <i class="bi bi-list-check me-2"></i> Ir al listado de cadetes
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta de Gestión de Presupuestos -->
                <div class="col-md-6">
                    <div class="card shadow-lg border-0 h-100">
                        <div class="card-body p-4 text-center">
                            <i class="bi bi-currency-dollar display-4 text-success mb-3"></i>
                            <h2 class="h3 card-title fw-bold">Gestión de Pedidos</h2>
                            <p class="card-text text-muted">Cree, modifique y revise los pedidos existentes.</p>
                            <a asp-controller="Pedidos" asp-action="Index" class="btn btn-success mt-3 w-100">
                                <i class="bi bi-journal-text me-2"></i> Ir al Listado de Presupuestos
                            </a>
                        </div>
                    </div>
                </div>

            </div>